{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["services"],
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["web", "worker", "cron"]
          },
          "name": {
            "type": "string"
          },
          "env": {
            "type": "string",
            "enum": ["java", "node", "python", "docker", "go", "ruby"]
          },
          "runtime": {
            "type": "string"
          },
          "plan": {
            "type": "string"
          },
          "buildCommand": {
            "type": "string"
          },
          "startCommand": {
            "type": "string"
          },
          "autoDeploy": {
            "type": "boolean"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}